{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Serve GenParker",
      "dependsOrder": "parallel",
      "dependsOn": [
        "serve-backend-platform",
        "serve-releaf-mobile",
        "serve-releaf-backend"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "serve-backend-platform",
      "type": "shell",
      "command": "npx nx run gen-parker-backend-platform:serve",
      "presentation": {
        "panel": "dedicated",
        "group": "GenParker BE"
      }
    },
    {
      "label": "serve-releaf-mobile",
      "type": "shell",
      "command": "npx nx run releaf-mobile-app:serve:development",
      "presentation": {
        "panel": "dedicated",
        "group": "Releaf Mobile"
      },
    },
    {
      "label": "serve-releaf-backend",
      "type": "shell",
      "command": "npx nx run releaf-backend:serve",
      "presentation": {
        "panel": "dedicated",
        "group": "Releaf Mckendobile"
      },
    }
  ]
}